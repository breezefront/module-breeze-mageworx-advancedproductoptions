<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breeze.js">
            <arguments>
                <argument name="bundles" xsi:type="array">
                    <item name="product" xsi:type="array">
                        <item name="items" xsi:type="array">
                            <item name="dynamicOptions" xsi:type="array">
                                <item name="path" xsi:type="string">MageWorx_DynamicOptionsBase/js/dynamicOptions</item>
                                <item name="import" xsi:type="array">
                                    <item name="dynamicOptionsDefaultCalculator" xsi:type="string">
                                        MageWorx_DynamicOptionsBase/js/calculator/default
                                    </item>
                                    <item name="registerAnonymousComponents" xsi:type="string">
                                        Swissup_BreezeMageworxAdvancedproductoptions/js/dynamicoptionsbase/dynamicoptions-dependencies
                                    </item>
                                </item>
                            </item>
                            <item name="dynamicOptionMinValueValidationRule" xsi:type="array">
                                <item name="path" xsi:type="string">MageWorx_DynamicOptionsBase/js/validation/dynamicOptionMinValueValidationRule</item>
                                <item name="load" xsi:type="array">
                                    <item name="onRequire" xsi:type="boolean">true</item>
                                </item>
                            </item>
                            <item name="dynamicOptionMaxValueValidationRule" xsi:type="array">
                                <item name="path" xsi:type="string">MageWorx_DynamicOptionsBase/js/validation/dynamicOptionMaxValueValidationRule</item>
                                <item name="load" xsi:type="array">
                                    <item name="onRequire" xsi:type="boolean">true</item>
                                </item>
                            </item>
                            <item name="dynamicOptionStepValidationRule" xsi:type="array">
                                <item name="path" xsi:type="string">MageWorx_DynamicOptionsBase/js/validation/dynamicOptionStepValidationRule</item>
                                <item name="load" xsi:type="array">
                                    <item name="onRequire" xsi:type="boolean">true</item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
