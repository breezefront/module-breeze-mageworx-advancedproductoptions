<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breeze.js">
            <arguments>
                <argument name="bundles" xsi:type="array">
                    <item name="product" xsi:type="array">
                        <item name="items" xsi:type="array">
                            <item name="optionFeatures" xsi:type="array">
                                <item name="path" xsi:type="string">MageWorx_OptionFeatures/js/catalog/product/features</item>
                                <item name="import" xsi:type="array">
                                    <item name="dependencies" xsi:type="string">
                                        Swissup_BreezeMageworxAdvancedproductoptions/js/optionfeatures/features-dependencies
                                    </item>
                                </item>
                            </item>
                            <item name="optionFeaturesIsDefault" xsi:type="string">
                                MageWorx_OptionFeatures/js/catalog/product/isDefault
                            </item>
                            <item name="optionAdditionalImages" xsi:type="array">
                                <item name="path" xsi:type="string">MageWorx_OptionFeatures/js/swatches/additional</item>
                                <item name="import" xsi:type="array">
                                    <item name="mwImageReplacerDeps" xsi:type="string">
                                        Swissup_BreezeMageworxAdvancedproductoptions/js/optionfeatures/imageReplacer-dependencies
                                    </item>
                                    <item name="mwImageReplacer" xsi:type="string">
                                        MageWorx_OptionFeatures/js/swatches/imageReplacer
                                    </item>
                                    <item name="mwImageReplacerRegister" xsi:type="string">
                                        Swissup_BreezeMageworxAdvancedproductoptions/js/optionfeatures/imageReplacer-register
                                    </item>
                                </item>
                            </item>
                            <item name="selectionLimitValidationRule" xsi:type="array">
                                <item name="path" xsi:type="string">MageWorx_OptionFeatures/js/selectionLimitValidationRule</item>
                                <item name="load" xsi:type="array">
                                    <item name="onRequire" xsi:type="boolean">true</item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>

        <referenceContainer name="breeze.container">
            <block class="Swissup\Breeze\Block\HtmlTemplate" name="breeze.MageWorx_OptionFeatures_template_option_gallery_dropdown_html" template="MageWorx_OptionFeatures::option/gallery/dropdown.html"/>
            <block class="Swissup\Breeze\Block\HtmlTemplate" name="breeze.MageWorx_OptionFeatures_template_option_gallery_radio_html" template="MageWorx_OptionFeatures::option/gallery/radio.html"/>
            <block class="Swissup\Breeze\Block\HtmlTemplate" name="breeze.MageWorx_OptionFeatures_template_option_gallery_checkbox_html" template="MageWorx_OptionFeatures::option/gallery/checkbox.html"/>
            <block class="Swissup\Breeze\Block\HtmlTemplate" name="breeze.MageWorx_OptionFeatures_template_option_gallery_empty_html" template="MageWorx_OptionFeatures::option/gallery/empty.html"/>
        </referenceContainer>
    </body>
</page>
